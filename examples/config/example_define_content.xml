<?xml version="1.0" standalone="yes"?>
<!-- $Id: example_define_content.xml 29 2005-03-04 21:25:29Z schst $ -->
<configuration>
	<!--
		Using the content attribute
	-->
	
	<define tag="page" type="array" content="items" name="_attribute" attribute="id">
		<define attribute="id" type="string"/>
	</define>
	<define tag="item" type="string" name="_none"/>
	
	<page id="foo">
		<item>one</item>
		<item>two</item>
		<item>three</item>
	</page>

	<page id="bar">
		<item>one</item>
	</page>

	<page id="argh">tomato</page>

</configuration>
